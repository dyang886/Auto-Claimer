{
  "name": "auto-claimer",
  "version": "1.0.0",
  "description": "Automate rewards claiming with ease!",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "David Yang",
  "license": "ISC",
  "build": {
    "appId": "com.davidyang.autoclaimer",
    "productName": "Auto Claimer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
